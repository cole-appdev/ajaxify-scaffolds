<p id="notice"><%= notice %></p>

<div class="d-flex flex-row">
  <div class="p-1"><h2>Characters</h2></div>
  <div class="ml-auto p-3">
    <%= link_to 'Add New Character', new_character_path, class: "h5" %>
  </div>
</div>


<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Actor</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.actor_id %></td>
        <td><%= character.movie_id %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

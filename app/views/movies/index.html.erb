<p id="notice"><%= notice %></p>

<div class="d-flex flex-row">
  <div class="p-1"><h2>Movies</h2></div>
  <div class="ml-auto p-3">
    <%= link_to 'Add New Movie', new_movie_path, class: "h5" %>
  </div>
</div>

<table id="movie-table" class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Description</th>
      <th>Duration</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <%= render "movies/form", movie: Movie.new %>

  <tbody id="movies">
    <% @movies.each do |movie| %>
      <tr id="<%= dom_id(movie) %>">
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director.name %></td>
        <td><%= movie.description %></td>
        <td><%= movie.duration %></td>
        <td style="text-align: center"><%= link_to 'Destroy', movie, method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


